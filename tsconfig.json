{
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node", "jasmine"],
    "declaration": true,
    "esModuleInterop": true,
    "downlevelIteration": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
